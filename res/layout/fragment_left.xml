<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_15sp"
        android:id="@+id/ll_home"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_home"
            android:background="@drawable/ic_home"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:id="@+id/tv_home"
            android:layout_marginLeft="@dimen/_20sp"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sp"
        android:id="@+id/ll_pengumuman">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_pengumuman"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pengumuman"
            android:id="@+id/tv_pengumuman"
            android:layout_marginLeft="@dimen/_15sp"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sp"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_15sp"
        android:id="@+id/ll_pertemuan">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_pertemuan"
            android:background="@drawable/ic_schedulemeeting"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pertemuan"
            android:id="@+id/tv_pertemuan"
            android:layout_marginLeft="@dimen/_20sp"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_15sp"
        android:id="@+id/ll_frs">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_frs"
            android:background="@drawable/ic_frs"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frs"
            android:id="@+id/tv_frs"
            android:layout_marginLeft="@dimen/_20sp"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_15sp"
        android:id="@+id/ll_logout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_logout"
            android:background="@drawable/ic_logout"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:id="@+id/tv_logout"
            android:layout_marginLeft="@dimen/_20sp"
            android:layout_gravity="center"
            android:textSize="@dimen/_20sp"></TextView>
    </LinearLayout>



</LinearLayout>