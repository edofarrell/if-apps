<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_header_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sp"
            android:background="@drawable/ic_filter" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sp"
            android:layout_marginTop="@dimen/_5sp"
            android:layout_marginRight="@dimen/_15sp"
            android:background="@drawable/custom_kotak_filter_pengumuman"
            app:queryHint="@string/hintPengumuman" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_header_pengumuman"
        android:layout_marginLeft="@dimen/_15sp"
        android:layout_marginRight="@dimen/_15sp"
        android:layout_marginTop="@dimen/_10dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_grup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>


    <ListView
        android:id="@+id/lv_pengumuman"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_chip"
        android:layout_marginTop="@dimen/_20sp"
        android:divider="@color/white"
        android:dividerHeight="@dimen/_20sp"
        android:padding="@dimen/_15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_expandable_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_add_pengumuman"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_add_invitasi_pertemuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/tv_label_add_tag_pengumuman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:text="Tag Pengumuman"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_tag_pengumuman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16dp"
                    app:fabSize="mini" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_time_slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_20dp"
                android:paddingBottom="@dimen/_16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:strokeWidth="1dp">

                    <TextView
                        android:id="@+id/tv_label_add_pengumuman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4dp"
                        android:text="@string/pengumuman"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_pengumuman_expandable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16dp"
                    app:fabSize="mini" />

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_pengumuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:src="@android:drawable/ic_input_add" />

    </RelativeLayout>

</RelativeLayout>