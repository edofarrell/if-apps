<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="@dimen/_4dp"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_close_24"
            app:title="@string/judulTambahFRS"
            app:titleCentered="true"
            />

    </com.google.android.material.appbar.AppBarLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_layout"
        android:paddingLeft="@dimen/_16dp"
        android:paddingRight="@dimen/_16dp"
        android:layout_above="@id/divider">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:background="@drawable/custom_kotak_filter_pengumuman"
                app:queryHint="@string/hintMatkul" />

            <TextView
                android:id="@+id/tv_hasil_pencarian_matkul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_bar"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:text="@string/hasilPencarianMatkul"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sp"></TextView>

            <ListView
                android:id="@+id/tv_lv_matkul"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/tv_hasil_pencarian_matkul"
                android:layout_margin="@dimen/_10dp"
                android:divider="@color/white"
                android:dividerHeight="@dimen/_20sp"
                android:clipToPadding="false">

            </ListView>

            <LinearLayout
                android:id="@+id/ll_selected_matkul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_lv_matkul"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_matakuliah_terpilih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_24" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_matkul_terpilih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/matkulTerpilih"
                android:layout_below="@id/tv_lv_matkul"
                android:layout_margin="@dimen/_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sp"></TextView>

            <TextView
                android:id="@+id/tv_info_penting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/_10sp"
                android:text="@string/infoPentingFRS"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_below="@id/tv_matkul_terpilih"></TextView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:layout_below="@id/tv_info_penting"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/tv_lv_matkuldipilih"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100dp"
                        android:divider="@color/white"
                        android:dividerHeight="@dimen/_20sp"
                        android:clipToPadding="false">

                    </ListView>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:id="@+id/ll_error"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/card_view"
                android:layout_marginLeft="@dimen/_10dp"
                >
                <TextView
                    android:id="@+id/tv_title_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prasyarat Mata Kuliah yang belum terpenuhi :"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_15dp">

                    <TextView
                        android:id="@+id/tv_kode_matkul_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/tv_nama_matkul_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="@dimen/_10dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>



    </ScrollView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_buttons"
        android:layout_marginBottom="@dimen/_16dp" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:gravity="right">

        <Button
            android:id="@+id/btn_add_matkul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tambah" />
    </LinearLayout>



</RelativeLayout>