<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_tambah_pengumuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tambahPengumuman"
        android:textSize="@dimen/_30sp" />

    <LinearLayout
        android:id="@+id/ll_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tambah_pengumuman"
        android:layout_marginLeft="@dimen/_20sp"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_marginRight="@dimen/_20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judul" />

        <EditText
            android:id="@+id/et_judul"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sp"
            android:layout_marginTop="@dimen/_10sp"
            android:background="@drawable/custom_kotak_filter_pengumuman"
            android:hint="Masukkan judul pengumuman disini"
            android:paddingLeft="@dimen/_10sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_judul"
        android:layout_marginLeft="@dimen/_20sp"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_marginRight="@dimen/_20sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tags" />

        <Button
            android:id="@+id/btn_pilih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pilih tag">

        </Button>

        <HorizontalScrollView
            android:id="@+id/scrl_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_black">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_grup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_tag"
        android:layout_marginLeft="@dimen/_20sp"
        android:layout_marginTop="@dimen/_20sp"
        android:layout_marginRight="@dimen/_20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi" />

        <EditText
            android:id="@+id/et_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sp"
            android:layout_marginTop="@dimen/_10sp"
            android:background="@drawable/custom_kotak_filter_pengumuman"
            android:gravity="top"
            android:hint="Masukkan deskripsi pengumuman disini"
            android:paddingLeft="@dimen/_10sp"
            android:paddingTop="@dimen/_10sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_20sp"
        android:layout_marginRight="@dimen/_20sp"
        android:text="@string/simpan" />

</RelativeLayout>