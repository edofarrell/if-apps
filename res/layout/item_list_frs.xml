<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_15sp"
    android:background="@drawable/border_grey"
    android:paddingBottom="@dimen/_15sp"

    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_calendar_month_24"
        android:layout_marginLeft="@dimen/_10sp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_academic_year"
        android:layout_marginLeft="@dimen/_10sp"
        android:layout_marginTop="@dimen/_5sp"
        android:text="Semester Ganjil 2022/2023"
        android:textSize="@dimen/_20sp"
        android:textColor="@color/black"></TextView>

</LinearLayout>